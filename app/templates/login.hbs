<div align="center">
  <a {{action 'home'}} class="image">
    <img src="AutoLogo.png" alt="" style="width:184px;height:49px;">
  </a>
  <div class="Login-info">
    <div class="form-group">
      {{!--<label>Username</label>--}}
      <style type="text/css">
  	   button{ text-decoration:none; font-size:150%; border:1px solid black; background:white; border-radius:15px; width:150px; padding:5px 30px;}
  	  </style>
      <style>
  	  input{border:0;outline:0;background:transparent;border-bottom:1px solid black;width:400px; height:50px; font-size:30px;}
  	  </style>
      {{input type="text" class="form-control" value=username
      enter="login" placeholder="Email"}}
    </div>
    <br />
    <div class="form-group">
      {{!--<label>Password</label>--}}
      {{input type="password" class="form-control" value=password
      enter="login" placeholder="Password"}}
    </div>
    <br />
    <div class="button">
      {{!<a href=# { {action "login"} }>Sign In Test</a>}}
      <button {{action "login"}}>Sign In</button>
    </div>


  </div>
  <div class="container">
    <p> Don't have an account yet?
      {{#link-to "signup" class="button"}}
        Sign Up.
      {{/link-to}}
    </p>
    </div>
</div>
